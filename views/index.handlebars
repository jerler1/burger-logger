{
    burgers: myData
}

<h1>Burger Logger</h1>

<h2>These are the burgers i've consumed.</h2>

<ul>
    {{#each burger}}
        {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2> Burgers that are devoured!</h2>

<ul>
    {{#each burger}}
        {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger to be consumed.</h2>
<form>
    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burgerInput" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0">To be devoured!
    </div>

    <button type="submit">Add a burger</button>
</form>